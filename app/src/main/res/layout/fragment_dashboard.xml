<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_user"
        android:layout_width="wrap_content"
        android:layout_height="263dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/github_logo"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_user">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/user_name"
                android:gravity="right"
                android:textSize="20dp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/textView_user_name"
                android:gravity="left"
                android:textSize="20dp"
                android:padding="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/user_location"
                android:gravity="right"
                android:textSize="20dp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/textView_user_location"
                android:gravity="left"
                android:textSize="20dp"
                android:padding="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/user_email"
                android:gravity="right"
                android:textSize="20dp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/textView_user_email"
                android:gravity="left"
                android:textSize="20dp"
                android:padding="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/user_company"
                android:gravity="right"
                android:textSize="20dp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/textView_user_company"
                android:gravity="left"
                android:textSize="20dp"
                android:padding="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/user_blog"
                android:gravity="right"
                android:textSize="20dp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/textView_user_blog"
                android:gravity="left"
                android:textSize="12dp"
                android:padding="3dp"
                android:autoLink="all" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/user_repositories"
                android:gravity="right"
                android:textSize="20dp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/textView_user_repositories"
                android:gravity="left"
                android:textSize="20dp"
                android:padding="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/user_gists"
                android:gravity="right"
                android:textSize="20dp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/textView_user_gists"
                android:gravity="left"
                android:textSize="20dp"
                android:padding="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/user_followers"
                android:gravity="right"
                android:textSize="20dp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/textView_user_followers"
                android:gravity="left"
                android:textSize="20dp"
                android:padding="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/user_following"
                android:gravity="right"
                android:textSize="20dp"
                android:padding="3dp" />
            <TextView
                android:id="@+id/textView_user_following"
                android:gravity="left"
                android:textSize="20dp"
                android:padding="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/user_more_info"
                android:gravity="right"
                android:textSize="20dp"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/textView_user_more_info"
                android:gravity="left"
                android:textSize="12dp"
                android:padding="3dp"
                android:autoLink="all" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>